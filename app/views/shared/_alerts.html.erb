<!-- app/views/shared/_alerts.html.erb -->
<% if notice %>
  <div class="alert alert-success" role="alert" data-controller="alert">
    <p><%= notice %></p>
    <button class="alert-close" data-action="click->alert#dismiss" aria-label="Close alert">&times;</button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-error" role="alert" data-controller="alert">
    <p><%= alert %></p>
    <button class="alert-close" data-action="click->alert#dismiss" aria-label="Close alert">&times;</button>
  </div>
<% end %>