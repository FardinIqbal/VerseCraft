<h1><%= @user.email %>'s Profile</h1>

<% if @user.bio.present? %>
  <h2>About Me</h2>
  <p><%= @user.bio %></p>
<% end %>

<% if @user.location.present? %>
  <p><strong>Location:</strong> <%= @user.location %></p>
<% end %>

<% if @user == current_user %>
  <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn' %>
<% end %>

<h2>Poems by <%= @user.email %></h2>

<% @poems.each do |poem| %>
  <div class="poem">
    <h3><%= link_to poem.title, poem_path(poem) %></h3>
    <p class="poem-meta"><%= poem.created_at.strftime("%B %d, %Y") %></p>
    <div class="poem-content">
      <%= truncate(poem.content, length: 200) %>
    </div>
    <%= link_to 'Read More', poem_path(poem), class: 'btn' %>
  </div>
<% end %>