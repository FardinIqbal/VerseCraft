<h1 class="text-center mb-3"><%= @user.email %>'s Profile</h1>

<% if @user.bio.present? %>
  <h2 class="mb-2">About Me</h2>
  <p class="mb-3"><%= @user.bio %></p>
<% end %>

<% if @user.location.present? %>
  <p class="mb-3"><strong>Location:</strong> <%= @user.location %></p>
<% end %>

<% if @user == current_user %>
  <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn mt-2 mb-4' %>
<% end %>

<h2 class="mb-3">Poems by <%= @user.email %></h2>

<% @poems.each do |poem| %>
  <div class="poem mb-4">
    <h3 class="poem-title">
      <%= link_to poem.title, poem_path(poem), class: 'poem-link' %>
    </h3>
    <p class="poem-meta mb-2"><%= poem.created_at.strftime("%B %d, %Y") %></p>
    <div class="poem-content mb-2">
      <%= truncate(poem.content, length: 200) %>
    </div>
    <%= link_to 'Read More', poem_path(poem), class: 'btn' %>
  </div>
<% end %>
