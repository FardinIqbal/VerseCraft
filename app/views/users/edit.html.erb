<h1>Edit Profile</h1>

<%= form_with(model: @user, local: true, class: 'profile-form') do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="error-messages">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :bio, class: 'form-label' %>
    <%= form.text_area :bio, class: 'form-input' %>
  </div>

  <div class="field">
    <%= form.label :location, class: 'form-label' %>
    <%= form.text_field :location, class: 'form-input' %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Profile', class: 'btn' %>
  </div>
<% end %>

<%= link_to 'Back to Profile', user_path(@user), class: 'btn btn-secondary' %>
