<h1>Admin: Manage Poems</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Created At</th>
    <th>Featured</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @poems.each do |poem| %>
    <tr>
      <td><%= link_to poem.title, poem_path(poem) %></td>
      <td><%= poem.user.email %></td>
      <td><%= poem.created_at.strftime("%B %d, %Y") %></td>
      <td><%= poem.featured? ? 'Yes' : 'No' %></td>
      <td>
        <%= button_to poem.featured? ? 'Unfeature' : 'Feature',
                      toggle_featured_admin_poem_path(poem),
                      method: :patch,
                      class: 'btn' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>