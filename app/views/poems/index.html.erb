<h1>Poems</h1>

<% @poems.each do |poem| %>
  <div class="poem">
    <h2><%= link_to poem.title, poem_path(poem) %></h2>
    <p class="poem-meta">By <%= poem.user.email %> | <%= poem.created_at.strftime("%B %d, %Y") %></p>
    <div class="poem-content">
      <%= truncate(poem.content, length: 200) %>
    </div>
    <%= link_to 'Read More', poem_path(poem), class: 'btn' %>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'New Poem', new_poem_path, class: 'btn' %>
<% end %>