<!-- app/views/poems/index.html.erb -->

<div class="poem-feed">
  <% @poems.each do |poem| %>
    <div class="poem-card">
      <div class="poem-card__header">
        <div class="poem-card__author">
          <div class="author-avatar">
            <!-- Use Font Awesome icon for user avatar -->
            <i class="fas fa-user-circle fa-3x avatar-icon"></i>
          </div>
          <div class="author-info">
            <span class="author-name"><%= poem.user.pen_name || poem.user.username %></span>
            <span class="post-date"><%= poem.created_at.strftime("%b %d, %Y") %></span>
          </div>
        </div>
        <div class="poem-card__options">
          <i class="fas fa-ellipsis-h options-icon"></i>
        </div>
      </div>

      <div class="poem-card__body">
        <h2 class="poem-title"><%= link_to poem.title, poem_path(poem), class: "title-link" %></h2>
        <div class="poem-content">
          <%= simple_format(poem.content.truncate(300)) %>
        </div>
      </div>

      <div class="poem-card__footer">
        <div class="poem-actions">
          <i class="far fa-heart like-icon"></i>
          <i class="far fa-comment comment-icon"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>
