<!-- app/views/devise/registrations/new.html.erb -->

<div class="auth-page">
  <!-- Rotating Poems Section -->
  <%= render "shared/poems_rotation" %>

  <!-- Authentication Container -->
  <div class="auth-container">
    <h2 class="auth-title">Join VerseCraft</h2>
    <p class="auth-subtitle">Create an account to share your poetry and be inspired by others.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email Address", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <%= f.submit "Sign Up", class: "btn btn-primary btn-auth" %>
    <% end %>

    <p class="auth-footer">
      Already have an account? <%= link_to "Sign In", new_user_session_path, class: "auth-link" %>
    </p>

    <!-- Coming Soon Links for App Stores -->
    <div class="app-store-links">
      <p class="coming-soon">Coming Soon:</p>
      <div class="store-buttons">
        <a href="#" class="store-link" aria-label="Coming soon on Play Store">
          <i class="fab fa-google-play"></i>
          <span>Play Store</span>
        </a>
        <a href="#" class="store-link" aria-label="Coming soon on App Store">
          <i class="fab fa-apple"></i>
          <span>App Store</span>
        </a>
      </div>
    </div>
  </div>
</div>
